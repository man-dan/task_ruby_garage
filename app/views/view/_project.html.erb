<div class="proj"><i class="fa fa-calendar" id="calendar"></i><p><%= value.title %></p>
 <div class="mod"><div id="v-line">|</div>
  <div class="ed"><%=link_to "view/edit/#{value.id}" do%><i class="fa fa-pencil p_pencil"></i><%end%></div>
       
        <div id="trashs"><%=link_to "view/destroy/#{value.id}",  method: :delete do%>
        <i class="fa fa-trash-o"></i>
        <%end%></div>
    </div>
</div>
<div id="task_place"><div id="plus_l" class="fa fa-plus fa-2x"></div><%= form_for(@task) do |f| %>
        <%= f.hidden_field(:project_id, value: "#{value.id}") %>
        <%= f.text_field :name, id: "task_name", placeholder: "Start typing here to create a task..." %>
        <div id="add_task"><%= f.submit "Add Task", class: "btn btn-success " %></div>
      <%end%>
      </div>

      <div id="tasks_place"><% @tasks.each do |task| %>
        <% if task.project_id == value.id %>
         <%= render('tasks/task', value: value, task: task) %>
         
        <% end %>
    <% end %></div>
<br><br>